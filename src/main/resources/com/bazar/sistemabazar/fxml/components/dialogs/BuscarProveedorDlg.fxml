<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bazar.sistemabazar.controllers.dialogs.BuscarProveedorDlgController">
   <children>
      <VBox layoutY="-2.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="57.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="161.0" text="Nombre del proveedor:" />
                  <TextField fx:id="nombreProveedorTextField" prefHeight="24.0" prefWidth="313.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </HBox>
            <VBox fx:id="panelTablaProveedores" prefHeight="296.0" prefWidth="600.0" />
            <HBox prefHeight="69.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="33.0" prefWidth="99.0" text="Seleccionado:">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="productoProveedorTextField" editable="false" prefHeight="33.0" prefWidth="436.0">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font></TextField>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="90.0" prefWidth="600.0">
               <children>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="37.0" prefWidth="600.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#cerrarDialogo" text="Cancelar">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botonAgregarProveedor" mnemonicParsing="false" onAction="#agregarProveedor" text="Agregar Proveedor">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
