<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="371.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bazar.sistemabazar.controllers.dialogs.BuscarProductoDlgController">
   <children>
      <VBox layoutY="-2.0" prefHeight="373.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="34.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="27.0" prefWidth="152.0" text="Nombre del producto:" />
                  <TextField fx:id="nombreProductoTextField" prefHeight="24.0" prefWidth="313.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </HBox>
            <VBox fx:id="panelTablaProductos" prefHeight="296.0" prefWidth="600.0" />
            <VBox prefHeight="34.0" prefWidth="600.0">
               <children>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="29.0" prefWidth="600.0">
                     <children>
                        <Button fx:id="botonCerrarDialogo" mnemonicParsing="false" onAction="#cerrarDialogo" text="Cancelar">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botonEliminarProducto" mnemonicParsing="false" text="Eliminar" onAction="#eliminarProducto"/>
                        <Button fx:id="botonModificarProducto" mnemonicParsing="false" onAction="#modificarProducto" text="Modificar">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="botonVerDetallesProducto" mnemonicParsing="false" text="Ver Detalles" onAction="#verDetallesProducto">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
